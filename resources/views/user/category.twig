{% extends 'templates/user/profile_template.twig' %}

{% block pageTitle %}{{ user.username }}'s Lists: {{ category }}{% endblock %}

{% block profile_content %}

    <div class="col-lg-10">

        {% include 'user/partials/profile_nav.twig' %}

        <h3>Lists: {{ category }}</h3>

        {% if not lists.isEmpty() %}
            <div class="row">
                {% for list in lists %}
                    {% include 'templates/list/list_template.twig' %}
                {% endfor %}
            </div>
        {% else %}
            <h2>This user does not have any lists in that category.</h2>
        {% endif %}

    </div>

{% endblock %}