{% extends 'templates/user/profile_template.twig' %}

{% block pageTitle %}{{ user.username }}'s Lists{% endblock %}

{% block profile_content %}

    <div class="col span_4_of_4">
        <h1>Lists</h1>

        {% if not lists.isEmpty() %}
            {% for list in lists %}
                {% include 'templates/list/list_template.twig' %}
            {% endfor %}
        {% else %}
            <h2>This user does not have any lists yet.</h2>
        {% endif %}

    </div>

{% endblock %}