{% extends 'templates/app.twig' %}

{% block pageTitle %}Recover Account{% endblock %}


{% block content %}
    {% include 'templates/partials/nav.twig' %}

    <div class="section group page auth">
        <div class="col span_4_of_4">
            <div class="col span_2_of_4 main form">
                <div class="col span_2_of_2 header">
                    <h2>Recover Your Account</h2>
                    <hr>
                </div>

                <form action="{{ path_for('auth.recover') }}" method="post" autocomplete="off" class="recover-form">
                    <input type="text" name="identifier" id="identifier" placeholder="Email/Username" value="{{ old_input.identifier }}">
                    {% if errors.identifier %} <div class="form_errors">{{ errors.identifier | first }}</div> {% endif %}

                    <input type="submit" value="Send Recovery" data-submit-value="Sending...">

                    {{ csrf.field | raw }}
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        $('.recover-form').on('submit', function() {

            var self = $(this),
                button = self.find('input[type="submit"], button'),
                submitValue = button.data('submit-value');

            button.attr('disabled', 'disabled').val((submitValue) ? submitValue : 'Please Wait...');
            document.getElementById("ajax-loader").style.visibility = "visible";

        });
    </script>
{% endblock %}