{% extends 'templates/app.twig' %}

{% block pageTitle %}Sign in{% endblock %}


{% block content %}
    {% include 'templates/partials/nav.twig' %}

    <div class="section group page auth">
        <div class="col span_4_of_4">
            <div class="col span_2_of_4 main form">
                <div class="col span_2_of_2 header">
                    <h2>Sign in</h2>
                    <hr>
                </div>

                <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off" class="login-form">
                    <input type="text" name="identifier" id="identifier" placeholder="Email/Username" value="{{ old_input.identifier }}">
                    {% if errors.identifier %} <div class="form_errors">{{ errors.identifier | first }}</div> {% endif %}

                    <input type="password" name="password" id="password" placeholder="Password"">
                    {% if errors.password %} <div class="form_errors">{{ errors.password | first }}</div> {% endif %}


                    <a href="{{ path_for('auth.recover') }}">Forgot my Password</a>
                    <input type="submit" value="Sign in" data-submit-value="Signing in...">

                    <div class="custom_checkbox">
                        <input type="checkbox" name="remember" id="remember">
                        <label for="remember">Remember me</label>
                    </div>

                    {{ csrf.field | raw }}
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        $('.login-form').on('submit', function() {

            var self = $(this),
                button = self.find('input[type="submit"], button'),
                submitValue = button.data('submit-value');

            button.attr('disabled', 'disabled').val((submitValue) ? submitValue : 'Please Wait...');
            document.getElementById("ajax-loader").style.visibility = "visible";

        });
    </script>
{% endblock %}