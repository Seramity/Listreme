{% extends 'templates/app.twig' %}

{% block content %}

    {% include 'templates/partials/nav.twig' %}

    <div class="section group page profile">
        <div class="col span_4_of_4 profile-main">
            <div class="col span_1_of_7">

                {% if auth.check and auth.user.id ==  user.id %}
                    <a href="{{ path_for('account.picture') }}">
                        <div class="avatar-container" data-content="Update Avatar">
                            {{ user.getAvatar({size : 150}) | raw }}
                        </div>
                    </a>
                {% else %}
                    {{ user.getAvatar({size : 150}) | raw }}
                {% endif %}

            </div>
            <div class="col span_6_of_7">
                <h1 class="username">{{ user.username }}</h1>
                <h3 class="name muted">{{ user.name }}</h3>
                <p class="bio">{{ user.bio }}</p>
            </div>
        </div>

        {% block profile_content %}{% endblock %}
    </div>

{% endblock %}